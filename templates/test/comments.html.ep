% for my $comment ($job->comments) {
    %= include 'comments/comment_row', comment => $comment, context => {type => 'job', id => $job->id}, put_action => 'apiv1_put_comment', delete_action => 'apiv1_delete_comment'
% }

% if (current_user) {
    %= form_for url_for('apiv1_post_comment', job_id => $job->id) => (method => "post", class => "form-horizontal", id => "commentForm", role => "form", onsubmit => "addComment(this); return false;") => begin
        %= include 'comments/add_comment_form_groups'
    % end
% }
