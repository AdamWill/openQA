% layout 'admin';
% title 'Test suites';

<div class="box box-shadow list-form">
    <div class="box-header aligncenter">New test suite</div>
    %= form_for admin_test_suites => (method => 'post') => begin
        <p>
            %= label_for name => 'Name'
            %= text_field 'name', size => 15
            %= label_for name => 'Priority'
            %= text_field 'prio', size => 5

            %= submit_button 'create'
        </p>
    % end
</div>

<div class="box box-shadow">
	<h2><%= title %></h2>

    %= include 'layouts/info'

	<table class="table-autostripe">
	    <thead>
		    <tr>
                <th>name</th>
                <th>prio</th>
                <th>variables</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            % for my $suite (@$suites) {
                <tr id="test_suite_<%= $suite->id %>">
                    <td class="name"><%= $suite->name %></td>
                    <td class="prio"><%= $suite->prio %></td>
                    <td class="variables">
                        % for my $s ($suite->settings) {
                        <%= $s->key %>=<%= $s->value %>
                        <%= link_delete '(del)' => url_for('admin_test_suite_setting_delete', testsuiteid => $suite->id, settingid => $s->id) %>
                        <br/>
                        % }

                        %= form_for url_for('admin_test_suite_setting_post', testsuiteid => $suite->id) => (id => "form_test_suite_".$suite->id ), (method => 'post') => begin
                            %= text_field 'key', size => 15
                            %= text_field 'value', size => 5

                            %= submit_button 'add'
                        % end
                    </td>
                    <td class="action"><%= link_to 'delete' => url_for('admin_test_suite', testsuiteid => $suite->id) => 'data-method' => 'delete' %></td>
                </tr>
            % }
        </tbody>
    </table>
</div>
